<section>
  <h1>Nova Categoria</h1>
  <%= form_for @category do |f| %>
    <div class="form-group">
      <%= f.label :name, 'Nome'  %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit 'Criar Categoria', class: "btn btn-default"  %>
    </div>
  <% end %>

</section>
