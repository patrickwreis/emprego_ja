<section>
<span class="error"><%= notice %></span>
  <div>
    <%= form_for @job do |f| %>
      <div>
        <%= f.label :title, 'Título' %>
        <%= f.text_field :title %>
      </div>
      <div>
        <%= f.label :company_id, 'Empresa' %>
        <%= f.collection_select :company_id, @companies, :id, :name %>
      </div>
      <div>
        <%= f.label :location, 'Local' %>
        <%= f.text_field :location %>
      </div>
      <div>
        <%= f.label :category, 'Categoria' %>
        <%= f.text_field :category %>
      </div>
      <div>
        <%= f.label :description, 'Descrição' %>
        <%= f.text_field :description %>
      </div>
      <div>
        <%= f.submit 'Atualizar Vaga'%>
      </div>
    <% end %>
  </div>
</section>
